/**index.wxss**/

page {
  background: #f6f6f6;
  height: 100%;
}

.container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-content: space-evenly;
  justify-content: space-evenly;
}

.widget{
  width:300rpx;
  height: 300rpx;
  border-radius: 10%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin: 20rpx;
}

.widget > navigator{
  width: 100%;
  height: 100%;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.widget-image {
  width: 100%;
  height: 70%;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
  border-top-left-radius: 10%;
  border-top-right-radius: 10%;
}

.widget-text{
  font-size: 40rpx;
  color: #007aff;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
  height: 30%;
  align-items: center;
  align-content: center;
  justify-content: center;
}

.disable {
  color: #888;
}