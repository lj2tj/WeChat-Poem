
/* title */
.weui-media-box__hd_in-appmsg{margin-right:16px;width:60px;height:60px;line-height:60px;text-align:center}
.weui-media-box__bd_in-appmsg{-webkit-box-flex:1;-webkit-flex:1;flex:1;min-width:0}

.weui-media-box__title{
  color:rgba(0,0,0,.9);
  width:auto;
  white-space:nowrap;
  align-items: center;
  text-align: center;
  line-height: 2em;
}
.weui-media-box__title__dynasty{
  font-weight: bolder;
  display: inline-block;
  font-size: 1.5em;
}
.weui-media-box__title__duration{
  font-size:  0.5em;
  margin-left: 10px;
  display: inline-block;
}

/* description */
.dynasty-desc{
  font-size: 32rpx;
  line-height:50rpx;
  padding: 10rpx;
  background-color: rgb(185, 184, 184);
  /*关键属性（必须有的）  */
  display: -webkit-box; 
  /*规定子元素的排列方向 */
  -webkit-box-orient: vertical; 
   /*限制文本显示的行数  */
  -webkit-line-clamp:2;
  /*实现多余的文字隐藏并用省略号来代表被隐藏的文字  */
  overflow: hidden;
  text-overflow:ellipsis;
}

.hide{
 display: -webkit-box;
}
.show{
 display: block;
}

/*切换  */  
 .state{
  color: cornflowerblue;
  float: right;
  font-size: 30rpx;
  margin: 30rpx;
 }

/* 选项 */
.widget-row{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-content: space-evenly;
  justify-content: space-evenly;
}

.widget{
  width:300rpx;
  height: 300rpx;
  border-radius: 10%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  margin: 20rpx;
}

.widget > navigator{
  width: 100%;
  height: 100%;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-items: center;
}

.widget-image {
  width: 100%;
  height: 70%;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
  border-top-left-radius: 10%;
  border-top-right-radius: 10%;
}

.widget-text{
  font-size: 40rpx;
  color: #007aff;
  padding: 0 0 0 0;
  margin: 0 0 0 0;
  height: 30%;
  align-items: center;
  align-content: center;
  justify-content: center;
}

